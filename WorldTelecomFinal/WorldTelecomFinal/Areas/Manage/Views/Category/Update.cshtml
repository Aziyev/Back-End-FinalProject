@model Category

@{
    ViewData["Title"] = "Update";
}


<div class="content-wrapper" style="margin-left:50px;">
      
 <div class="row d-flex justify-content-center" style="margin:100px 0px;">
    <div class="col-lg-8" >
        <h1 style="color:black;">Create</h1>
        <form method="post">
            <div class="form-check">
                 <input asp-for="IsMain" class="form-check-input isMainInput">
                 <label asp-for="IsMain" class="form-check-label"></label>
                </div>
            <div class="mb-3 form-group" style="width:80%;">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group parentcontainer">
                <label asp-for="ParentId" >Example select</label>
                <select asp-for="ParentId" class="form-control" asp-items="new SelectList(ViewBag.MainCategories,nameof(Category.Id),nameof(Category.Name))">
                 
                </select>
              </div>
            <button style="margin-top:20px;" type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>

            <div class="content-backdrop fade">

            </div>
  </div>
