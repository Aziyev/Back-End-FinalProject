@model List<Product>


@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper" style="margin-left:50px;">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              

              <!-- Basic Bootstrap Table -->
              <div class="card">
                <h5 class="card-header">Products</h5>
                <div style="text-align:end;">
                    <a asp-controller="product" asp-action="create" asp-area="manage" style="border:1px solid black; padding:5px 10px; margin-right:10px; border-radius:10px; background-color:green; color:white;">
                        Create
                        </a>
                </div>
                <div class="table-responsive text-nowrap">
                  <table class="table">
                    <thead>
                      <tr>
                        <th>No</th>
                        <th>Name</th>
                       @* <th>Users</th>*@
                        @*<th>Status</th>*@
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">

                         @foreach (Product product in Model)
                {
                     <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@product.Id</strong></td>
                        <td>@product.Name</td>

                        @*<td><span class="badge bg-label-primary me-1">Active</span></td>*@
                        <td>
                          <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                              <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                              <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                              <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                            </div>
                          </div>
                        </td>
                      </tr>

                }

                     
                    </tbody>
                  </table>
                </div>
              </div>
              <!--/ Basic Bootstrap Table -->

              
            </div>
            <!-- / Content -->

 

            <div class="content-backdrop fade"></div>
          </div>