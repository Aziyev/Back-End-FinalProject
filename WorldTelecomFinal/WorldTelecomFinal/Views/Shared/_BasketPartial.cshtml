@model List<BasketVM>

<div class="basket-products-count-mini">
         @Model.Count
</div>
<div class="dropdowna-contenta">
    <ul class="cart-items">
        @foreach (BasketVM basketVM in Model)
        {
            <li>
                <div class="single-cart-item d-flex">
                    <div class="cart-item-thumb">
                        <a href="single-product.html"><img style="width:60px; height:60px;" src="/assets/img/productjpg/@basketVM.Image" alt="product"></a>
                        <span class="product-quantity">@(basketVM.Count)x</span>
                    </div>
                    <div class="cart-item-content media-body">
                        <h5 class="product-name"><a href="single-product.html">@basketVM.Name</a></h5>
                        <span class="product-price">€@basketVM.Price</span>
                        <a asp-controller="basket" asp-action="deletefrombasket" asp-route-id="@basketVM.ProductId" class="product-close deletefrombasket">X</a>
                    </div>
                </div>
            </li>
        }
    </ul>
    <div class="price_content">
        <div class="cart-total price_inline">
            <span class="label">Total</span>
            <span class="value">€@(Model.Sum(b => b.Price * b.Count))</span>
        </div>
    </div>
    <div class="checkout text-center">
        <a href="checkout.html" class="main-btn">Checkout</a>
    </div>
</div>
